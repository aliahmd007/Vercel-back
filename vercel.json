


{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/send-email",
      "dest": "server.js",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "server.js",
      "methods": ["GET"]
    }
  ],
  "env": {
    "EMAIL_USER": "@your-email-user",
    "EMAIL_PASS": "@your-email-password"
  }
}